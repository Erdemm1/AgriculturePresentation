@model EntityLayer.Concrete.Annoucement
@{
    ViewData["Title"] = "EditAnnoucement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnoucementId)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <input type="date" class="form-control" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Description</label>
                    <textarea class="form-control" cols="30" rows="6" asp-for="Description"> </textarea>
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a href="/Annoucement" class="btn btn-outline-info">Ana Menü</a>
            </form>
        </div>
    </div>
</div>
